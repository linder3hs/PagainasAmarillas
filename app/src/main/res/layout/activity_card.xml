<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    tools:context="com.linder.pagainasamarillas.ResultadoActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/cardResult"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <LinearLayout
            android:background="@drawable/bg_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/nameCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre_prueba"
                    android:textSize="20sp"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/direccion"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/lugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ciudad"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/numero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/numero_980999"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imagen"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/logopizza"
                    android:layout_margin="6dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"

                    android:text="@string/sucursales"
                    android:textAllCaps="false"
                    android:textColor="#3c3d3d"
                    android:textSize="17sp"
                    android:padding="8dp"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:background="@drawable/bg_sucrusales"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
